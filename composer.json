{
    "name": "innovator-japan/laravel-csv",
    "description": "A library that manipulates CSV with Laravel",
    "keywords": [
        "laravel",
        "php",
        "csv",
        "export"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Naoki Yamada",
            "email": "n.yamada@innovator.jp.net"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-mbstring": "*",
        "illuminate/support": "5.6.* || 5.7.*",
        "league/csv": "^9.1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^3.7",
        "php-coveralls/php-coveralls": "^2.1",
        "phpmd/phpmd": "^2.6",
        "phpstan/phpstan": "^0.11.1",
        "phpstan/phpstan-phpunit": "^0.11.0",
        "phpstan/phpstan-strict-rules": "^0.11.0",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "InnovatorJapan\\LaravelCsv\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "InnovatorJapan\\LaravelCsv\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpcs": [
            "./vendor/bin/phpcs --standard=phpcs.xml src"
        ],
        "phpmd": [
            "./vendor/bin/phpmd src,tests text phpmd.xml"
        ],
        "phpstan-src": [
            "./vendor/bin/phpstan analyse -l 7 -c phpstan.src.neon src"
        ],
        "phpstan-tests": [
            "./vendor/bin/phpstan analyse -l 7 -c phpstan.tests.neon tests"
        ],
        "phpstan": [
            "@phpstan-src",
            "@phpstan-tests"
        ],
        "phpunit": [
            "./vendor/bin/phpunit --colors=always"
        ],
        "phpunit-ci": [
            "./vendor/bin/phpunit --colors=always --coverage-clover=tests/build/clover.xml",
            "./vendor/bin/php-coveralls"
        ],
        "test": [
            "@phpcs",
            "@phpmd",
            "@phpstan",
            "@phpunit"
        ],
        "ci": [
            "@phpcs",
            "@phpmd",
            "@phpstan",
            "@phpunit-ci"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "InnovatorJapan\\LaravelCsv\\CsvServiceProvider"
            ]
        }
    }
}
